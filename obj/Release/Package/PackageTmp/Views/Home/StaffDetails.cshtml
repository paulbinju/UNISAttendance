
@{
    ViewBag.Title = "Staff Details";
    int i = 1;
}

<script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">


                            <div class="row">



                                <div class="col-md-12">
                                   @if (ViewBag.results != null)
                                   { 
                                       <h2>
                                       
                                            @foreach (var stf in ViewBag.AllUsers)
                                            {
                                                @(ViewBag.xuid == Convert.ToString(stf.UID) ? "" + stf.Name : "")
                                            }
                                            <span>Punchings - @ViewBag.xfromdate.ToString("dd/MM/yyyy") to @ViewBag.xtodate.ToString("dd/MM/yyyy")</span>
                                         
                                    </h2>
                                   }
                                </div>


                                <div class="col-md-12 table-bordered pull-right">
                                    <div class="row">

                                        <br />
                                        @using (Html.BeginForm())
                                        {

                                            <div class="col-md-4">
                                                <label>Select Staff</label>
                                                <select name="uid" class="form-control" required>
                                                    <option value="">select</option>
                                                    @foreach (var stf in ViewBag.AllUsers)
                                                    {
                                                        <option @(ViewBag.xuid == Convert.ToString(stf.UID) ? "selected" : "") value="@stf.UID">@stf.Name</option>
                                                    }
                                                </select>
                                            </div>
                                            
                                            <div class="col-md-3">
                                        <label>From Date</label>
                                        <input type="date" name="fromdate" class="form-control" required value="@ViewBag.xfromdate" /></div>
                                             
                                            <div class="col-md-3">
                                        <label>To Date</label>
                                        
                                        <input type="date" name="todate" class="form-control" required  value="@ViewBag.xtodate" /></div>
                                            <div class="col-md-2">
                                        <div style="height:25px;"></div>
                                        <input type="submit" name="submit" value="Generate" class="btn btn-danger" /></div>
                                        }
                                        <br class="clearfix" /><br />
                                        <br class="clearfix" />
                                        <br />
                                        

                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="page-content-wrapper ">

            <div class="container">



                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-body">


                                <div class="row">

                                    <div class="col-md-6">
                                        @{ i = 1; }
                                        <p></p>
                                        <h3>All Punchings</h3>

                                        <table class="table table-striped">
                                            <tr>

                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Timing</th>
                                            </tr>

                                            @if (ViewBag.results != null)
                                            {

                                                foreach (var stf in ViewBag.results)
                                                {
                                                    <tr>

                                                        <td>@stf.UID</td>
                                                        <td>@stf.Name</td>
                                                        <td>@stf.DateTimez</td>
                                                    </tr>
                                                    i++;
                                                }
                                            }

                                        </table>



                                    </div>
 

                                    <div class="col-md-6">
                                        @{ i = 1; }
                                        
                                        <p class="pull-right"><a href="@Url.Content("~/ExcelExporter")" class="btn btn-success" target="_blank"> <i class="fa fa-Excel"></i> Export to Excel</a> </p>
                                        <h3>In / Out</h3>
                                        <table class="table table-striped">
                                            <tr>

                                                <th>Name</th>
                                                <th>In Timing</th>
                                                <th>Out Timing</th>

                                            </tr>

                                            @if (ViewBag.Combinedlist != null)
                                            {

                                                foreach (var stf in ViewBag.Combinedlist)
                                                {
                                                    <tr>

                                                        
                                                        <td>@stf.Name</td>
                                                        <td>@stf.Entrytime</td>
                                                        <td>@stf.Exittime</td>

                                                    </tr>
                                                    i++;
                                                }
                                            }

                                        </table>



                                    </div>

                                 




                                    @*<div class="col-md-4">
                                        @{ i = 1; }
                                        <h3>First Punch</h3>

                                        <table class="table table-striped">
                                            <tr>
                                                <th>No.</th>

                                                <th>Name</th>
                                                <th>Timing</th>
                                            </tr>
                                            @if (ViewBag.PunchIn != null)
                                            {
                                                foreach (var stf in ViewBag.PunchIn)
                                                {
                                                <tr>
                                                    <td>@i</td>

                                                    <td>@stf.Name</td>
                                                    <td>@stf.DateTimez</td>
                                                </tr>
                                                    i++;
                                                }
                                            }

                                        </table>



                                    </div>


                                    <div class="col-md-4">
                                        @{ i = 1; }
                                        <h3>Last Punch</h3>

                                        <table class="table table-striped">
                                            <tr>
                                                <th>No.</th>

                                                <th>Name</th>
                                                <th>Timing</th>
                                            </tr>

                                            @if (ViewBag.PunchOut != null)
                                            {
                                                foreach (var stf in ViewBag.PunchOut)
                                                {
                                                <tr>
                                                    <td>@i</td>

                                                    <td>@stf.Name</td>
                                                    <td>@stf.DateTimez</td>
                                                </tr>
                                                    i++;
                                                }
                                            }
                                        </table>



                                    </div>*@





                                </div>




                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</div>






